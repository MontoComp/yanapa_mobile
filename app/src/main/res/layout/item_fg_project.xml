<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            android:elevation="50dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:padding="7dp"
                android:background="@drawable/style_item_permit_prev"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_item_title_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:paddingStart="5dp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:text="TextView"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_item_manager_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:gravity="start|center"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_item_place_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:gravity="start|center"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_donate_project"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.17"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/style_item_permit_post"
                android:backgroundTint="@color/dom_yanapa"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_monetization"
                    app:tint="@color/white">

                </ImageView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>