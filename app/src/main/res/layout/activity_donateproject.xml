<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/ly_confirm_danate">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/common_layout_back"></include>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a Yanapa"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para continuar con tu donación, ingresa tus datos"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:gravity="center">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu dirección de correo electrónico."
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginVertical="5dp"
                    android:gravity="center">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_shape_input"
                    android:layout_marginHorizontal="15dp"
                    android:inputType="textEmailAddress"
                    android:hint="example123@gmail.com"
                    android:paddingHorizontal="5dp"
                    android:elevation="5dp">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Datos de tu tarjeta"
                    android:textSize="19sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:gravity="center">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de tarjeta:"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:gravity="center">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_shape_input"
                    android:layout_marginHorizontal="15dp"
                    android:hint="Número de 16 dígitos"
                    android:inputType="number"
                    android:maxLength="16"
                    android:paddingHorizontal="5dp"
                    android:elevation="5dp">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de caducidad:"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:gravity="center">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/border_shape_input"
                    android:elevation="5dp">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:hint="Mes"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingHorizontal="5dp"
                        android:layout_marginHorizontal="2dp">

                    </EditText>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray">

                    </View>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:hint="Año"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingHorizontal="5dp"
                        android:layout_marginHorizontal="2dp">

                    </EditText>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CVV:"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:gravity="center">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/border_shape_input"
                    android:layout_marginHorizontal="15dp"
                    android:hint="Número de 3 dígitos"
                    android:inputType="number"
                    android:maxLength="16"
                    android:paddingHorizontal="5dp"
                    android:elevation="5dp">

                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp">

                </View>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_confirm_danate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="center"
        android:background="@drawable/border_shape_btn_pantone"
        android:backgroundTint="@color/orange_solid_yanapa"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/ic_payment"
            app:tint="@color/white">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/white"
            android:text="Confirmar"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>